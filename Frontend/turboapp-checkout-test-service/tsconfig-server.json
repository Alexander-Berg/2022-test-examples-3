{
    "compilerOptions": {
        "outDir": "./server/build",
        "target": "es2018",
        "allowJs": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["server/**/*", "src/types/**/*"]
}
