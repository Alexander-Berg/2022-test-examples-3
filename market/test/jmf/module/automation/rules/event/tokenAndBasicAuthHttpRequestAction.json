{
  "rules": [
    {
      "actions": [
        {
          "type": "httpRequest",
          "method": "POST",
          "url": "https://example.com",
          "authorization": {
            "type": "tokenAndBasic",
            "username": "user",
            "passwordSecret": "mySecret",
            "accessTokenSecret": "myTokenSecret"
          },
          "headers": {
            "X-Some-Header": [
              "value"
            ]
          },
          "body": "{\"my\":\"body\",\"number\":124}"
        }
      ]
    }
  ]
}
