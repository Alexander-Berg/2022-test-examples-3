<?xml version="1.0" encoding="UTF-8"?>
<am:access-matrices xmlns:am="urn:jmf:security:access-matrix:1.0">

    <am:access-matrix metaclass="automationRule">
        <am:profile-actions profile-id="@admin">
            <am:action action-id="@editProcessRedirect">true</am:action>
            <am:action action-id="@create">true</am:action>
            <am:action action-id="config:edit">true</am:action>
            <am:action action-id="title:edit">true</am:action>
            <am:action action-id="responsibleOus:edit">true</am:action>
            <am:action action-id="responsibleEmployees:edit">true</am:action>
            <am:action action-id="status:edit">true</am:action>
        </am:profile-actions>
        <am:profile-actions profile-id="@user">
            <am:action action-id="@editProcessRedirect">false</am:action>
            <am:action action-id="@create">true</am:action>
            <am:action action-id="config:edit">true</am:action>
            <am:action action-id="title:edit">true</am:action>
            <am:action action-id="responsibleOus:edit">true</am:action>
            <am:action action-id="responsibleEmployees:edit">true</am:action>
            <am:action action-id="status:edit">true</am:action>
        </am:profile-actions>
    </am:access-matrix>


    <am:access-matrix metaclass="automationRule$event">
        <am:profile-actions profile-id="@admin">
            <am:action action-id="entity:edit">true</am:action>
            <am:action action-id="ruleGroup:edit">true</am:action>
        </am:profile-actions>
        <am:profile-actions profile-id="@user">
            <am:action action-id="entity:edit">true</am:action>
            <am:action action-id="ruleGroup:edit">true</am:action>
        </am:profile-actions>
    </am:access-matrix>


    <am:access-matrix metaclass="simple1">
        <am:profile-actions profile-id="@admin">
            <am:action action-id="@create">true</am:action>
            <am:action action-id="ruleResult:edit">true</am:action>
        </am:profile-actions>
        <am:profile-actions profile-id="@user">
            <am:action action-id="@create">true</am:action>
            <am:action action-id="ruleResult:edit">true</am:action>
        </am:profile-actions>
        <am:profile-actions profile-id="activeEmployee">
            <am:action action-id="@create">true</am:action>
            <am:action action-id="ruleResult:edit">true</am:action>
        </am:profile-actions>
    </am:access-matrix>

    <am:access-matrix metaclass="ou">
        <am:profile-actions profile-id="@admin">
            <am:action action-id="@view">true</am:action>
        </am:profile-actions>
        <am:profile-actions profile-id="@user">
            <am:action action-id="@view">true</am:action>
        </am:profile-actions>
    </am:access-matrix>

</am:access-matrices>
