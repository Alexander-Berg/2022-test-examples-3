<?xml version="1.0" encoding="UTF-8"?>
<am:access-matrices xmlns:am="urn:jmf:security:access-matrix:1.0">

    <am:access-matrix metaclass="entity">
        <am:profile-actions profile-id="@theCreator">
            <am:action action-id="@create">true</am:action>
            <am:action action-id="@edit">true</am:action>
        </am:profile-actions>
    </am:access-matrix>

    <am:access-matrix metaclass="ou">
        <am:profile-actions profile-id="@theCreator">
            <am:action action-id="title:edit">true</am:action>
        </am:profile-actions>
    </am:access-matrix>

    <am:access-matrix metaclass="employeeRole">
        <am:profile-actions profile-id="@theCreator">
            <am:action action-id="rolesForCreate:view">true</am:action>
            <am:action action-id="rolesForCreate:edit">true</am:action>
            <am:action action-id="code:view">true</am:action>
            <am:action action-id="code:edit">true</am:action>
            <am:action action-id="title:view">true</am:action>
            <am:action action-id="title:edit">true</am:action>
        </am:profile-actions>
    </am:access-matrix>
    <am:access-matrix metaclass="employee">
        <am:profile-actions profile-id="@theCreator">
            <am:action action-id="roles:view">true</am:action>
            <am:action action-id="roles:edit">true</am:action>
            <am:action action-id="code:view">true</am:action>
            <am:action action-id="code:edit">true</am:action>
            <am:action action-id="title:view">true</am:action>
            <am:action action-id="title:edit">true</am:action>
            <am:action action-id="ou:edit">true</am:action>
        </am:profile-actions>
    </am:access-matrix>
</am:access-matrices>