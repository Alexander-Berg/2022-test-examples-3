<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" packages="ru.yandex.market.log4j2">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d] %-5p [%c{1} %t] %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="org.mortbay" level="WARN"/>
        <Logger name="com.google" level="WARN"/>
        <Logger name="org.apache" level="WARN"/>
        <Logger name="httpclient" level="WARN"/>
        <Logger name="com.gargoylesoftware.htmlunit" level="OFF"/>
        <Logger name="org.hibernate" level="WARN"/>
        <Logger name="org.eclipse" level="WARN"/>
        <Logger name="org.springframework" level="WARN"/>
        <Logger name="ru.yandex" level="DEBUG"/>
        <Logger name="ru.yandex.common" level="INFO"/>
        <Logger name="net.htmlparser.jericho" level="OFF"/>
        <Logger name="com.mchange" level="WARN"/>
        <Logger name="com.amazonaws" level="WARN"/>
        <Logger name="cache-usage.log" level="INFO" additivity="false"/>
        <Logger name="robot-reports.log" level="INFO" additivity="false"/>
        <Logger name="ru.yandex.market.mining" additivity="false" level="DEBUG"/>
        <Logger name="ru.yandex.market.robot.tasks.mining" additivity="false" level="DEBUG"/>

        <Root level="ALL">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>
</Configuration>