<?xml version="1.0" encoding="utf-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true" default-autowire="byName">

    <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"/>

    <bean name="fakeServantlet" class="ru.yandex.common.framework.http.FakeServantlet"/>

    <bean name="fakeRedirServantlet" class="ru.yandex.common.framework.http.FakeRedirServantlet"/>

    <bean name="throwExceptionServantlet" class="ru.yandex.common.framework.http.ThrowExceptionServantlet"/>

    <bean name="fakeDirectServantlet" class="ru.yandex.common.framework.http.FakeDirectServantlet"/>

    <bean name="throwExceptionDirectServantlet" class="ru.yandex.common.framework.http.ThrowExceptionDirectServantlet"/>

    <bean name="differentDataServantlet" class="ru.yandex.common.framework.http.DifferentDataServantlet"/>
</beans>
