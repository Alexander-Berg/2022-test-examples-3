<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" packages="ru.yandex.market.logistics.lom.logging">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%c{1} %t] %m%n"/>
        </Console>
        <Console name="BACK_LOG">
            <BackLogLayout />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>
</Configuration>
