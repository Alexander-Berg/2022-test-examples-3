<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="urn:jmf:trigger:1.0"
        xmlns:c="urn:jmf:common:1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <trigger id="deprecatedTstOnExceeded">
        <title>
            <c:value>Триггер для проверки срабатыывания триггеров при истечении запаса времени у обратного счетчика
            </c:value>
        </title>
        <event xsi:type="attribute" fqn="deprecatedEntityWithStatusBackTimer@timer" event="EXCEED"/>
        <action xsi:type="bean" id="@testExceededTrigger"/>
    </trigger>

</config>