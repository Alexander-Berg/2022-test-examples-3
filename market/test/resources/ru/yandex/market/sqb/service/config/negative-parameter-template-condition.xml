<?xml version="1.0" encoding="utf-8"?>

<!-- У элемента "parameter" одновременно присутствуют condition & template -->

<query>
    <templates>
        <template name="template">
            <sql>SOME SQL</sql>
            <condition>SOME CONDITION</condition>
        </template>
    </templates>
    <parameters>
        <parameter name="is_enabled" value="value" template="template" description="Признак того что магазин включен">
            <condition>SOME CONDITION</condition>
        </parameter>
    </parameters>
    <base>I AM BASE</base>
    <description>I AM DESCRIPTION</description>
</query>
