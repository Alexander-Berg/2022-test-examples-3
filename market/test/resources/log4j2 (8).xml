<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" packages="ru.yandex.market.log4j2">
    <Appenders>
        <CONSOLE name="MAIN">
            <PatternLayout pattern="%d %-5p [%c{1} %t] %m%n"/>
        </CONSOLE>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>
</Configuration>
