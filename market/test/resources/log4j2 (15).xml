<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" packages="ru.yandex.market.log4j2">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%c{1} %t] TEST_LOG %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.mortbay" level="WARN"/>
        <Logger name="com.google" level="WARN"/>
        <Logger name="org.apache" level="WARN"/>
        <Logger name="httpclient" level="WARN"/>
        <Logger name="org.hibernate" level="WARN"/>
        <Logger name="org.eclipse" level="WARN"/>
        <Logger name="org.springframework" level="WARN"/>
        <Logger name="ru.yandex" level="DEBUG"/>
        <Logger name="com.mchange" level="WARN"/>
        <Logger name="proto-client" level="ERROR"/>
        <Logger name="ru.yandex.inside.yt.kosher.impl.common.http" level="ERROR"/>
        <Root level="ALL">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>
</Configuration>