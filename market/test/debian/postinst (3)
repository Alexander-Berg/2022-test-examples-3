#!/bin/bash

CONF_DIR="/etc/yandex/mproxy"
CONF_STATIC="${CONF_DIR}/conf-static"
CONF_VALUES="${CONF_DIR}/values-available"
CONF_GENERATED="${CONF_DIR}/conf-generated"
CONF_VALUES_ENABLED="${CONF_DIR}/values-enabled"

fn_remove_static() {
  local _file="${1}"
  rm -f "${CONF_GENERATED}/${_file}.conf" 2>/dev/null
  rm -f "${CONF_STATIC}/${_file}.conf" 2>/dev/null
  rm -f "${CONF_VALUES}/${_file}.yaml" 2>/dev/null
}

case $1 in
configure)
  # Remove old configuration files
  set +e
  fn_remove_static "00010-global.market_slb"
  fn_remove_static "25702-litmus.market_slb-testing"
  fn_remove_static "25702-litmus_fslb.market_slb-front-testing"
;;

abort-upgrade|abort-remove|abort-deconfigure)
;;
*)
  echo "postinst called with unknown argument \`$1'" >&2
;;

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
