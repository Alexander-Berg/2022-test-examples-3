#!/bin/bash
# postinst script for config-market-iptruler
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

CONF_DIR="/etc/yandex/balancer"
VALUES_AVAILABLE="${CONF_DIR}/values-available"
VALUES_ENABLED="${CONF_DIR}/values-enabled"
VALUES_STATIC="${CONF_DIR}/values-static"

fn_remove() {
  local _file="${1}"
  for _folder in "${VALUES_AVAILABLE}" "${VALUES_ENABLED}"; do
    rm -f "${_folder}/${_file}.yaml" 2>/dev/null
  done
}

case "$1" in
    configure)
      fn_remove "298-notaclaim.market_slb-front-testing"
      fn_remove "28733-crmbot.market_slb-front-testing"
      fn_remove "32044-bluedesktop_load_sample.market_slb-front-testing"
      fn_remove "32045-bluedesktop_load.market_slb-front-testing"
      fn_remove "35138-market_front_blue_desktop_ext.market_slb-front-testing"
      fn_remove "32046-bluetouch_load.market_slb-front-testing"
      fn_remove "32043-bluetouch_load_sample.market_slb-front-testing"
      fn_remove "36001-mbo_stable_noxsl.market_slb-front-testing"
      fn_remove "30310-marketgroup.market_slb-front-testing"
      fn_remove "44107-mbi_dwh_api.market_slb-front-testing"
      fn_remove "29124-pricelabs.market_slb-front-testing"
      fn_remove "25202-ipa-blue.market_slb-front-testing"
      fn_remove "41526-business.market_slb-front-testing"

      # CSADMIN-32404
      rm -f /etc/init.d/yandex-demobalancer 2>/dev/null

      # Permissions for balancer_api to write configs
      chown balancer:root /etc/yandex/balancer/conf-generated
      chmod 0755 /etc/yandex/balancer/conf-generated

      chown balancer: /var/cache/yandex/balancer
      chown balancer: /var/cache/yandex/balancer/sd
    ;;
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
