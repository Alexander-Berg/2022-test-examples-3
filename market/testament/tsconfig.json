{
    "compilerOptions": {
        "target": "ES2018",
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": [
            "dom",
            "esnext"
        ],
        "moduleResolution": "node",
        "module": "commonjs",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "downlevelIteration": true
    },
    "exclude": [
        "node_modules"
    ]
}
