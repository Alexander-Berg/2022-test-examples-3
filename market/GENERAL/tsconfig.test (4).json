{
    "extends": "@yandex-market/tsconfig/esm/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "isolatedModules": true,
        "outDir": "dist",
        "baseUrl": "./",

        "sourceMap": true,
        "strict": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./vendor"
    ]
}
