<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MBO-CMS-GWT" packages="ru.yandex.market.log4j2">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT" ignoreExceptions="false">
            <PatternLayout pattern="%d %-5p [%t] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT" level="warn" />
        </Root>
        <Logger name="ru.yandex.market.mbo.cms" level="trace" additivity="false">
            <AppenderRef ref="STDOUT" level="debug" />
        </Logger>
    </Loggers>
</Configuration>
