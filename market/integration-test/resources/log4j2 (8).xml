<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" packages="ru.yandex.market.common.logging.logback, ru.yandex.market.logistics.logging.backlog">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%c{1} %t] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>
</Configuration>
