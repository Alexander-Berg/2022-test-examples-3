{
    "extends": "@yandex-market/tsconfig/es/tsconfig.json",
    "compilerOptions": {
        "lib": ["DOM", "ES2019", "ScriptHost"],
        "outDir": "./",
        "baseUrl": ".",
        "sourceMap": false,
        "incremental": true,
        "strict": true,
        "skipLibCheck": true,
        "module": "CommonJS",
        "declaration": true,
        "target": "es2018",
        "inlineSourceMap": true
    },
    "typings": ["global.d.ts", "cats.d.ts", "shot.d.ts"],
    "exclude": ["./scripts/**/*", "./configs/**/*", "node_modules"],
    "include": [
      "global.d.ts",
      "cats.d.ts", 
      "shot.d.ts",
      "./helpers/*.ts", 
      "./helpers/*.tsx", 
  ]
}
